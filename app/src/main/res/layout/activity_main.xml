<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ouaspel.anthony.smsfiltering.Main">

    <TextView
        android:text="Make these idiots submit:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idiotCount"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/spamCount"
        android:layout_below="@+id/idiotCount"
        android:layout_centerHorizontal="true"
        android:hint="Enter a number" />

    <Button
        android:text="Remind them"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spam"
        android:elevation="0dp"
        tools:text="Remind them"
        android:layout_below="@+id/spamCount"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset"
        android:elevation="0dp"
        tools:text="Reset"
        android:layout_below="@+id/spam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notSubmitted"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/reset"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
